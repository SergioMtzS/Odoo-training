<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
          <record model="ir.ui.view" id="session_view_form">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                  <form string="Session Form">
                    <sheet>
                        <h1><field name="name"></field></h1>
                        <group>
                            <group>
                                <field name="course_id"></field>
                            </group>
                            <group>
                                <field name="instructor_id"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"></field>
                            </page>
                        </notebook>
                    </sheet>
                  </form>
            </field>
          </record>
          <record model="ir.ui.view" id="course_view_list">
              <field name="name">academy.session.list</field>
              <field name="model">academy.session</field>
              <field name="arch" type="xml">
                  <tree string="Session list">
                       <field name="name"></field>
                       <field name="instructor_id"></field>
                  </tree>
              </field> 
          </record>
    </data>
</odoo>  