<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
          <record model="ir.ui.view" id="course_view_form">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                  <form string="Course Form">
                    <sheet>
                        <h1><field name="name"></field></h1>
                        <group>
                            <group>
                                <field name="active"></field>
                                <field name="level"></field>
                            </group>
                            <group>
                                <field name="base_price"></field>
                                <field name="additional_fee"></field>
                                <field name="total_price" force_save="1"></field>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"></field>
                            </page>
                            <page string="Sessions">
                                <field name="session_ids"></field>
                            </page>
                        </notebook>
                    </sheet>
                  </form>
            </field>
          </record>
          <record model="ir.ui.view" id="course_view_list">
              <field name="name">academy.course.list</field>
              <field name="model">academy.course</field>
              <field name="arch" type="xml">
                  <tree string="Course list">
                       <field name="name"></field>
                       <field name="description"></field>
                       <field name="level"></field>
                  </tree>
              </field> 
          </record>
          <record model="ir.ui.view" id="course_view_search">
                  <field name="name">academy.course.search</field>
                  <field name="model">academy.course</field>
                  <field name="arch" type="xml">
                      <search>
                           <field name="name"></field>
                          <field name="description"></field>
                      </search>
                  </field> 
          </record>
    </data>
</odoo>  